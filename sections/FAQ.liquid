{% comment %} <style>
  /* FAQ Section Styles */
.faq-section {
  padding: 20px;
  background-color: #f9f9f9;
  border: 1px solid #e0e0e0;
  margin-bottom: 20px;
}

.faq-section h2 {
  font-size: 24px;
  color: #333;
  margin-bottom: 20px;
}

.faq-section .faq-columns-2 {
  display: flex;
  flex-wrap: wrap;
}

.faq-section .faq-item {
  width: 50%; /* Each item takes up half the width for a 2-column layout */
  padding: 10px;
  box-sizing: border-box;
}

.faq-section .faq-item h3 {
  font-size: 18px;
  color: #007bff; /* Link color */
  cursor: pointer;
}

.faq-section .faq-item p {
  font-size: 16px;
  color: #666;
}

</style>
{% schema %}
{
  "name": "FAQ Section",
  "settings": [
    {
      "type": "text",
      "id": "faq_title",
      "label": "FAQ Section Title"
    },
    {
      "type": "checkbox",
      "id": "show_search",
      "label": "Show Search Bar"
    },
    {
      "type": "select",
      "id": "columns",
      "label": "Number of Columns",
      "options": [
        {
          "value": "1",
          "label": "1 Column"
        },
        {
          "value": "2",
          "label": "2 Columns"
        },
        {
          "value": "3",
          "label": "3 Columns"
        }
      ]
    }
  ],
  "presets": [
      {
        "name": "FAQ ",
        "category": "Collection"
      }
    ]
}
{% endschema %}

<div class="faq-section">
  <h2>{{ section.settings.faq_title }}</h2>
  {% if section.settings.show_search %}
    <!-- Render search bar -->
  {% endif %}

  <div class="faq-columns-{{ section.settings.num_columns }}">
    {% for faq in faq_items %}
      <div class="faq-item">
        <h3>{{ faq.question }}</h3>
        <p>{{ faq.answer }}</p>
      </div>
    {% endfor %}
  </div>
</div>
<script>
  $(document).ready(function() {
    $('.faq-item .faq-answer').hide(); // Hide all answers by default

    $('.faq-question').click(function() {
      $(this).next('.faq-answer').slideToggle();
      $('.faq-answer').not($(this).next('.faq-answer')).slideUp(); // Close other answers
    });
  });
</script> {% endcomment %}

